<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="buttonTextStyle">@style/button_text</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashScreen">
        <item name="android:windowBackground">@color/brand1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Text Styles -->
    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat"/>

    <style name="body_text" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="header1" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/header1_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header2" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/header2_text_size</item>
    </style>

    <style name="header3" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/header3_text_size</item>
    </style>

    <style name="board_text" parent="AppTheme.TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/board_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="button_text" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/header3_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="metadata_title1" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_title1_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="metadata_title2" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_title2_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="metadata_body1_primary" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body1_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="metadata_body1_secondary" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body1_size</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="metadata_body2" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body2_size</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Component styles -->
    <style name="word_list">
        <item name="colorPrimary">@color/board_background</item> <!-- Overscroll highlight -->
        <item name="android:numColumns">2</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:horizontalSpacing">@dimen/LU_1</item>
        <item name="android:verticalSpacing">@dimen/LU_1</item>
    </style>

    <style name="board_view">
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:horizontalSpacing">@dimen/LU_0</item>
        <item name="android:verticalSpacing">@dimen/LU_0</item>
    </style>

    <style name="board_tile">
        <item name="android:padding">@dimen/tile_padding</item>
        <item name="android:textAppearance">@style/board_text</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">60sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>
    
</resources>